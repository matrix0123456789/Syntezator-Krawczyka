<UserControl x:Class="Syntezator_Krawczyka.UtwórSerwerUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  MinWidth="200"
             mc:Ignorable="d" Background="#246" d:DesignWidth="300" Height="55">
    <Grid>
        <Label Name="Autor" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="White">Autor</Label>
        <Label Name="Tytuł" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="White" Margin="0,21,0,0">Tytuł</Label>
        <Grid.ContextMenu>
            <ContextMenu>
                <!--<MenuItem Header="Otwórz" Click="Otwórz_click"/>-->
                <MenuItem  Click="Usuń_click" Header="Usuń" />
                <MenuItem Header="Publiczny" IsCheckable="True" IsChecked="False" Click="CheckBox_Click" Name="pubCheck"/>
            </ContextMenu>
        </Grid.ContextMenu>
    </Grid>
</UserControl>
