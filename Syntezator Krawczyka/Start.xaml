<Window x:Class="Syntezator_Krawczyka.Start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Start" Height="390" Width="640">
    <Grid>
        <Label Content="Jaebe Music Studio" VerticalAlignment="Top" HorizontalAlignment="Center"  FontSize="30"/>
        <Grid Margin="0,55,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*" MinHeight="120"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.ColumnSpan="1" Grid.RowSpan="3" Background="white">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
               <!-- <Label Content="Nowy plik" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.ColumnSpan="3" Margin="0,0,0,0" Foreground="Black"/>
               --> <Button Margin="0" Content="Nowy pusty projekt" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Grid.Row="0" Grid.RowSpan="5" Grid.ColumnSpan="3" Background="#daddee" Click="Pusty_Click" BorderThickness="0" />
               <!-- <Button Margin="0" Content="Przykładowy Ambient" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Grid.Row="2" Grid.ColumnSpan="3" Grid.Column="0" BorderThickness="0" Background="#dde0f0"/>
                <Button Margin="0" Content="Przykładowy Dubstep" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Grid.Row="3" Grid.ColumnSpan="3" Grid.Column="0" BorderThickness="0" Background="#dde0f0"/>
                <Button Margin="0" Content="Przykładowy Techno" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Grid.Row="4" Grid.ColumnSpan="3" Grid.Column="0" BorderThickness="0" Background="#dde0f0"/>
           --> </Grid>
            <Button Click="OtwórzClick" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" xmlns:s="clr-namespace:Syntezator_Krawczyka"  Grid.Column="2" Grid.Row="0" Background="Beige">
                <Grid >
                    <s:IkonaOtwórz HorizontalAlignment="Left" Margin="-3,8,0,68" VerticalAlignment="Center" RenderTransformOrigin="0,0">
                        <s:IkonaOtwórz.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleY="2" ScaleX="2"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </s:IkonaOtwórz.RenderTransform>
                    </s:IkonaOtwórz>
                    <Label FontSize="25
                           " Margin="67,11,-67,-11">Otwórz plik</Label>
                </Grid></Button>
            <Grid Grid.Column="2" Grid.Row="1" Background="Beige">
                <Grid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Wyczyść listę" Click="WyczyśćListę_Click"></MenuItem></ContextMenu></Grid.ContextMenu>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Label Content="Ostatnio otwierane" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.RowSpan="1" Grid.ColumnSpan="3"/>
                <ScrollViewer Grid.Row="1">
                    <StackPanel Name="OstOtw"></StackPanel></ScrollViewer>
            </Grid>
            <Grid Grid.Column="2" Grid.Row="2" Background="ForestGreen" xmlns:s="clr-namespace:Syntezator_Krawczyka">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Label Content="Twoje pliki na jaebe.za.pl/musicstudio" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="2" Grid.ColumnSpan="3"/>
                <ScrollViewer Grid.Row="3"></ScrollViewer>
                <s:LogowanieUC Grid.RowSpan="2" ></s:LogowanieUC>
            </Grid>
        </Grid>

    </Grid>
</Window>
