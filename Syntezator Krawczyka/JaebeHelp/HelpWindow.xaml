<Window x:Class="Syntezator_Krawczyka.JaebeHelp.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pomoc - Jaebe Music Player" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" HorizontalAlignment="Stretch" >
            <ListView Name="nazwy" SelectionChanged="nazwy_Selected" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></ListView></Grid>
        <GridSplitter  Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <RichTextBox IsReadOnly="True" Name="treść" Grid.Column="2"></RichTextBox>
    </Grid>
</Window>
