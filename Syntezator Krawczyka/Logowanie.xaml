<Window x:Class="Syntezator_Krawczyka.Logowanie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Logowanie" Height="300" Width="300" Closed="Window_Closed" MinHeight="159" MinWidth="250">
    <Grid Background="#112">
        <Label Margin="10,8,185,0" VerticalAlignment="Top" Foreground="White" RenderTransformOrigin="1,0.5" Content="Zaloguj się do" />
        <TextBox Height="23" Margin="55,31,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Name="login"/>
       <PasswordBox Margin="55,59,10,0" VerticalAlignment="Top" Height="23"  Name="haslo"></PasswordBox>
         <Button Content="Loguj" Margin="10,87,10,0" VerticalAlignment="Top" Height="30" Click="Button_Click"/>
        <Label Margin="10,26,10,0" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="White" Content="Login" />
        <Label Margin="10,56,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="White" Content="Hasło" />
        <Label Name="link" Margin="93,8,10,0" VerticalAlignment="Top" Foreground="#FF4CA6FF" RenderTransformOrigin="1,0.5" Content="syntezator.aq.pl" Cursor="Hand" Background="#00000000" MouseDown="link_MouseDown" />

    </Grid>
</Window>
