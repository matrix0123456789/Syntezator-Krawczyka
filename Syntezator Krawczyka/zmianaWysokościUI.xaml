<UserControl x:Class="Syntezator_Krawczyka.Synteza.zmianaWysokościUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignHeight="86" d:DesignWidth="163" MouseMove="UserControl_MouseMove">
    <Grid Background="#aa8">
        <Slider ValueChanged="slider1_ValueChanged" Name="slider1" ToolTip="Zmiana oktawy" Minimum="-5" Maximum="5" Value="0" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Height="20" Width="82" SmallChange="1"/>
        <Slider ValueChanged="slider2_ValueChanged" x:Name="slider2" ToolTip="Zmiana tonu" Minimum="0" Maximum="6" Value="0" HorizontalAlignment="Left" Margin="0,30,0,0" VerticalAlignment="Top" Height="20" Width="82" SmallChange="0.5"/>
        <Slider ValueChanged="slider3_ValueChanged" x:Name="slider3" ToolTip="Zmiana częstotliwości o mniej niż ton" Minimum="-1" Maximum="1" Value="0" HorizontalAlignment="Left" Margin="0,50,0,0" VerticalAlignment="Top" Height="20" Width="82"/>
    </Grid>
</UserControl>
