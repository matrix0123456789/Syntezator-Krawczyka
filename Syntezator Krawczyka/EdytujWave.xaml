<Window x:Class="Syntezator_Krawczyka.EdytujWave"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EdytujWave" Height="300" Width="300" SizeChanged="Window_SizeChanged">
    <Grid MouseMove="Fala_MouseMove" MouseDown="Fala_MouseDown" MouseUp="Fala_MouseUp">
        <Button Content="Play" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Play_click"/>
        <Canvas Name="Fala" Margin="10,35,10,10" MouseMove="Fala_MouseMove">
            <Rectangle VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Fill="Aqua"></Rectangle>
            <Polygon/>
        </Canvas>
        <Button Content="+" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="33" Click="plus_click"/>
        <Button Content="-" HorizontalAlignment="Left" Margin="128,10,0,0" VerticalAlignment="Top" Width="33" Click="minus_click"/>
        <Polygon Name="trójkąt1" Points="0,0,20,0,10,15" Fill="blue" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,35,0,0"  MouseMove="Fala_MouseMove" MouseDown="Fala_MouseDowntrj1" MouseUp="Fala_MouseUp"></Polygon>
        <Polygon Name="trójkąt2" Points="0,0,20,0,10,15" Fill="blue" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,35,0,0" MouseMove="Fala_MouseMove" MouseDown="Fala_MouseDowntrj1" MouseUp="Fala_MouseUp"></Polygon>
    </Grid>
</Window>
