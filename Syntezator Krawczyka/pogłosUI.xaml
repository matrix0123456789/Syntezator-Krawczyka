        <Label Content="Pogłos" Height="28" HorizontalAlignment="Left" Name="label1" VerticalAlignment="Top" />
        <Slider Height="23" HorizontalAlignment="Left" Margin="0,74,0,0" ToolTip="głośność echa" VerticalAlignment="Top" Width="100" SelectionStart="0.5" Maximum="1" Name="sliderC" ValueChanged="slider3_ValueChanged" />
    </Grid>

</UserControl>
