<Window x:Class="Syntezator_Krawczyka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Syntezator Krawczyka" Height="350" Width="525" Closed="Window_Closed" KeyDown="Window_KeyDown" KeyUp="Window_KeyUp" MinHeight="265" MinWidth="280">
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo x:Name="pasekZadań" >
        </TaskbarItemInfo>
    </Window.TaskbarItemInfo>
    <Grid>
        <Button Content="Czyść bufor" HorizontalAlignment="Left" Margin="12,0,0,10" Name="button1" Width="92" Click="button1_Click" Height="23" VerticalAlignment="Bottom" />
        <ScrollViewer Margin="109,68,12,12" CanContentScroll="False" VerticalScrollBarVisibility="Auto">
            <WrapPanel Name="pokaz" />
        </ScrollViewer>

        <Button Content="Otwórz plik"  Height="23" HorizontalAlignment="Left" Margin="12,12,0,0" Name="button3" VerticalAlignment="Top" Width="92" Click="button3_Click" ToolTip="Otwórz plik zawierający nuty">

        </Button>
        <Button Content="Zapisz plik" ToolTip="Zapisz plik zawierający nuty" Height="23" HorizontalAlignment="Left" Margin="12,40,0,0" Name="button4" VerticalAlignment="Top" Width="92" Click="button4_Click" />
        <Button Content="Graj" Height="23" HorizontalAlignment="Left" Margin="109,12,0,0" Name="button6" VerticalAlignment="Top" Width="36" Click="button6_Click" />
        <Button Content="Zapisz dźwięk" ToolTip="Zapisz plik dźwiękowy (można go potem odtworzyć programami typu Windows Media Player czy Winamp)." Height="23" HorizontalAlignment="Left" Margin="12,96,0,0" Name="button7" VerticalAlignment="Top" Width="92" Click="button7_Click" TextOptions.TextHintingMode="Animated" />
        <Button Content="Stop" Height="23" HorizontalAlignment="Left" Margin="150,12,0,0" Name="button8" VerticalAlignment="Top" Width="37" Click="button8_Click" />
        <ProgressBar Name="postęp" HorizontalAlignment="Left" Height="13" Margin="12,124,0,0" VerticalAlignment="Top" Width="92"/>
        <Slider HorizontalAlignment="Left" Margin="12,142,0,0" VerticalAlignment="Top" Width="87" Minimum="0" Maximum="100" ValueChanged="Slider_ValueChanged"/>
        <Button Content="Dodaj instrument"  Height="23" HorizontalAlignment="Left" Margin="12,165,0,0" x:Name="buttonNowyInstrument" VerticalAlignment="Top" Width="92" Click="buttonNowyInstrument_Click" ToolTip="Otwórz plik zawierający nuty"/>
        <Slider Margin="192,17,89,0" VerticalAlignment="Top" Name="suwak"/>
        <Label Content="00:00/00:00" Margin="0,12,12,0" Name="czas" VerticalAlignment="Top" HorizontalAlignment="Right"/>
    </Grid>
</Window>
